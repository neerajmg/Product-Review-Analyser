{
  "manifest_version": 3,
  "name": "Review Analyzer",
  "description": "Analyze product reviews with safe deep crawl and structured pros/cons summarization.",
  "version": "0.1.0",
  "action": {
  "default_title": "Review Analyzer",
    "default_popup": "src/ui/popup.html"
  },
  "options_page": "src/ui/options.html",
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/lib/site_database.js", "src/lib/universal_extractor.js", "src/selectors.js", "src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/styles.css"],
      "matches": ["*://*/*"]
    }
  ]
}
